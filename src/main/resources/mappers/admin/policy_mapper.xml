<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.settings.policy">

    <select id="selectPolicyDetail" parameterType="com.dchans.api.admin.dto.settings.policy.PolicyDto" resultType="com.dchans.api.admin.dto.settings.policy.PolicyDto">
        select type, content
        from site_policy
        where type = #{type}
    </select>

    <insert id="upsertPolicy" parameterType="com.dchans.api.admin.dto.settings.policy.PolicyDto" >
        insert into site_policy (
            type,
            content
        )values(
            #{type},
            #{content}
        )
        on duplicate key update
        content = #{content}
    </insert>
</mapper>